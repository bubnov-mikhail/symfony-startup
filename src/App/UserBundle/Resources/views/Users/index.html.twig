{% extends 'AppDefaultBundle::base.html.twig' %}

{% block title %}Пользователи системы{% endblock %}

{% block content %}
    <a href="{{ path('user_add') }}" class="btn btn-success pull-right">
        <i class="icon-plus icon-white"></i>
        Добавить пользователя
    </a>
    <table class="table table-hover">
        <thead>
            <tr>
                <th class="span1">#</th>
                <th class="span4">Имя пользователя</th>
                <th class="span3">Email</th>
                <th class="span2">Редактировать</th>
                <th class="span2">Удалить</th>
            </tr>
        </thead>
        <tbody>
            {% for user in entity %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user }}</td>
                    <td>{{ user.email }}</td>
                    <td>
                        <a href="{{ path('user_edit', { "id": user.id }) }}" title="Редактировать {{ user.username }}"><i class="icon-edit"></i></a>
                    </td>
                    <td>
                        <a href="{{ path('user_delete', { "id": user.id }) }}" title="Удалить {{ user.username }}"><i class="icon-remove"></i></a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>

    </table>
{% endblock %}
